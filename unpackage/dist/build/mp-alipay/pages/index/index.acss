.container{padding:20px;height:100vh;display:flex;flex-direction:column}.timer-section{flex:1;margin-bottom:20px;overflow:hidden}.timer-box{height:100%;background:#f5f5f5;border-radius:10px}.timers-list{padding:10px}.timer-area{background:#fff;border-radius:8px;padding:12px;margin-bottom:10px;box-shadow:0 2px 4px rgba(0,0,0,.1);display:flex;align-items:center;justify-content:space-between}.timer-content{display:flex;align-items:center}.timer-icon{width:30px;height:30px;margin-right:10px}.timer-info{display:flex;flex-direction:column}.timer-name{font-size:16px;font-weight:700}.timer-countdown{font-size:14px;color:#e74c3c}.close-btn{font-size:24px;color:#999;background:none;border:none;padding:0}.empty-timer{height:100%;display:flex;align-items:center;justify-content:center;font-size:18px;color:#666}.food-section{height:50%;display:flex;flex-direction:column}.category-nav{display:flex;white-space:nowrap;margin-bottom:20px}.category-item{padding:8px 15px;margin-right:10px;border-radius:20px;background:#f5f5f5;color:#666}.category-item.active{background:#007aff;color:#fff}.add-category{padding:8px 15px;color:#007aff}.food-list{flex:1;overflow:hidden}.food-card{background:#fff;border-radius:10px;padding:15px;margin-bottom:10px;display:flex;align-items:center}.food-icon{width:40px;height:40px;margin-right:15px}.food-name{flex:1;font-size:16px}.food-time{color:#666}.add-btn{background:#007aff;color:#fff;border-radius:25px;margin:20px 0}.bottom-nav{display:flex;justify-content:space-around;padding:10px 0;border-top:1px solid #eee}.nav-item{color:#666}.nav-item.active{color:#007aff;font-weight:700}.edit-btn{background:#f0ad4e;color:#fff;padding:2px 8px;border-radius:3px;font-size:12px;margin-left:10px}